@model tstdealsv2.Models.tstproducts_transactions

@{
    ViewBag.Title = "Transactions";
    Layout = "~/Views/Shared/_LayoutVPanel.cshtml";
}

<h4 class="py-3 breadcrumb-wrapper mb-4">
    <span class="text-muted fw-light">Sales /</span> Transactions
</h4>
<div class="card">
    <div class="card-datatable table-responsive pt-0">
        <table class="datatables-basic table table-bordered">
            <thead>
                <tr>
                    <th></th>
                    <th>Id</th>
                    <th>SenderId</th>
                    <th>ReceiverId</th>
                    <th>CurrencyId</th>
                    <th>TypeOfTransaction</th>
                    <th>TransactionDetails</th>
                    <th>PaymentMethod</th>
                    <th>AccountName</th>
                    <th>AccountNumber</th>
                    <th>AmountPaid</th>
                    <th>Date</th>
                    <th>ReceiptNo</th>
                    <th>Reason</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<!-- Modal to add new record -->
<div class="offcanvas offcanvas-end" id="offcanvasRecords">
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title" id="offcanvasRecordsHeader">New Record</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                aria-label="Close"></button>
    </div>
    <div class="offcanvas-body flex-grow-1">
        <form class="add-new-record pt-0 row g-2" id="formAddEdit" onsubmit="return false">
            @Html.EditorFor(m => m.Id, new { htmlAttributes = new { @class = "form-control d-none", @id = "txtId", @Value = "0" } })
            <div class="col-sm-12">
                <label class="form-label">Sender ID</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text"><i class="bx bx-user"></i></span>
                    @Html.EditorFor(m => m.SenderId, new { htmlAttributes = new { @class = "form-control", @id = "txtSenderId" } })
                </div>
            </div>
            <div class="col-sm-12">
                <label class="form-label">Receiver ID</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text"><i class='bx bxs-briefcase'></i></span>
                    @Html.EditorFor(m => m.ReceiverId, new { htmlAttributes = new { @class = "form-control", @id = "txtReceiverId" } })
                </div>
            </div>
            <div class="col-sm-12">
                <label class="form-label">Currency</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                    @Html.EditorFor(m => m.CurrencyId, new { htmlAttributes = new { @class = "form-control", @id = "txtCurrencyId" } })
                </div>
            </div>
            <div class="col-sm-12">
                <label class="form-label">Type Of Transaction</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text"><i class='bx bx-calendar'></i></span>
                    @Html.EditorFor(m => m.TypeOfTransaction, new { htmlAttributes = new { @class = "form-control", @id = "txtTransactionType" } })
                </div>
            </div>
            <div class="col-sm-12">
                <label class="form-label">Transaction Details</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text"><i class='bx bxs-briefcase'></i></span>
                    @Html.EditorFor(m => m.TransactionDetails, new { htmlAttributes = new { @class = "form-control", @id = "txtTransactionDetails" } })
                </div>
            </div>
            <div class="col-sm-12">
                <label class="form-label">Payment Method</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text"><i class='bx bxs-briefcase'></i></span>
                    @Html.EditorFor(m => m.PaymentMethod, new { htmlAttributes = new { @class = "form-control", @id = "txtPaymentMethod" } })
                </div>
            </div>
            <div class="col-sm-12">
                <label class="form-label">Account Name</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text"><i class='bx bxs-briefcase'></i></span>
                    @Html.EditorFor(m => m.AccountName, new { htmlAttributes = new { @class = "form-control", @id = "txtAccountName" } })
                </div>
            </div>
            <div class="col-sm-12">
                <label class="form-label">Account Number</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text"><i class='bx bxs-briefcase'></i></span>
                    @Html.EditorFor(m => m.AccountNumber, new { htmlAttributes = new { @class = "form-control", @id = "txtAccountNumber" } })
                </div>
            </div>
            <div class="col-sm-12">
                <label class="form-label">Amount Paid</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text"><i class='bx bxs-briefcase'></i></span>
                    @Html.EditorFor(m => m.AmountPaid, new { htmlAttributes = new { @class = "form-control", @id = "txtAmountPaid" } })
                </div>
            </div>
            <div class="col-sm-12">
                <label class="form-label">Date</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text"><i class='bx bxs-briefcase'></i></span>
                    @Html.EditorFor(m => m.Date, new { htmlAttributes = new { @class = "form-control", @id = "txtDate" } })
                </div>
            </div>
            <div class="col-sm-12">
                <label class="form-label">Receipt Number</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text"><i class='bx bxs-briefcase'></i></span>
                    @Html.EditorFor(m => m.ReceiptNo, new { htmlAttributes = new { @class = "form-control", @id = "txtReceiptNumber" } })
                </div>
            </div>
            <div class="col-sm-12">
                <label class="form-label">Reason</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text"><i class='bx bxs-briefcase'></i></span>
                    @Html.EditorFor(m => m.Reason, new { htmlAttributes = new { @class = "form-control", @id = "txtReason" } })
                </div>
            </div>
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary data-submit me-sm-3 me-1" onclick="SubmitMVM();">Save</button>
                <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="offcanvas">Cancel</button>
            </div>
        </form>
    </div>
</div>

<!-- Modal to delete record -->
<div class="modal fade" id="modalDeleteRecord" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-simple modal-enable-otp modal-dialog-centered">
        <div class="modal-content p-3 p-md-5">
            <div class="modal-body">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="text-center mb-4">
                    <h3 class="mb-4">Delete Confirmation</h3>
                </div>
                <h6>Are you sure you want to delete this record?</h6>
                <form id="formDeleteRecord" class="row g-3 mt-3" onsubmit="return false">
                    @Html.EditorFor(d => d.Id, new { htmlAttributes = new { @class = "form-control d-none", @readonly = true, @Value="0", @id="ctlId" } })
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-danger me-sm-3 me-1" onclick="DeleteMVM();">Delete</button>
                        <button type="reset" class="btn btn-label-secondary" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/assets/scripts/api/vSalesTransactions.js"></script>


}

